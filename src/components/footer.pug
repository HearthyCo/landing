mixin footer()
  footer#footer
    .container
      picture.logo
        source(srcset='/assets/images/logo.svg', type='image/svg+xml')
        img(src='/assets/images/logo.png', alt='logo')
      form#whitepaper(action=urlSubcribe + '/subscribe', method='POST')
        h2 Interested in our future crowdsale?
        div.newsletter.before-submit
          input(type=email, placeholder='Your email...', name='email', required)
          button Subscribe
        .after-submit You have subscribed to hearthy
      .links
        span Hearthy &reg; 2017
